{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build project - debug",
			"command": "/usr/bin/make",
			"args": [
				"debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "build project with make"
		},
		{
			"type": "shell",
			"label": "clear build files",
			"command": "/usr/bin/make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "delete all object file and execution file"
		}
	]
}